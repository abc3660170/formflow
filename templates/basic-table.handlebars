<table class="hc-formflow hc-formflow-{{this.type}}">
    <tbody>
        {{#each this.rowedData}}
        <tr>
            {{#each this}}
                <td class="hc-formflow-label"
                    colId="{{this.id}}"
                    colspan="{{this.kColspan}}"
                    style=" width: {{this.kWidth}}">
                    <span tag="label">
                        {{this.kText}}
                    </span>
                </td>
                <td class="hc-formflow-value"
                    colId="{{this.id}}"
                    colspan="{{this.vColspan}}"
                    style=" width: {{this.vWidth}}">
                    <span tag="value">
                        {{#if this.querying}}
                            <div class="spinner">
                                <div class="bounce1"></div>
                                <div class="bounce2"></div>
                                <div class="bounce3"></div>
                            </div>
                        {{else}}
                            {{this.vText}}
                        {{/if}}
                    </span>
                </td>
            {{/each}}
        </tr>
        {{/each}}
    </tbody>
</table>
